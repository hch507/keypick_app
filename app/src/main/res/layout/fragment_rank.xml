<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"


    tools:context=".MainFragments.RankFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center_horizontal"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/black"
                android:textFontWeight="30"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="포스팅된 글의 랭킹이 궁금하신가요??"
                android:textSize="13dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posting Blog Keyword"
            android:textColor="@color/black"

            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_keyword"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            app:boxStrokeColor="@color/appbar"
            app:endIconMode="clear_text"
            android:outlineAmbientShadowColor="@color/appbar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:helperText="포스팅 제목의 키워드를 입력해주세요"
            android:hint="KEYWORD">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/postingKeyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="왕곡가든"
                android:inputType="text"


                />


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/appbar"
            android:text="검색"
             />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="검색 결과"
            android:textColor="@color/black"
            android:textSize="20dp"
             />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/Line"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/ranking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>